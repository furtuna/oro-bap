{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'issues-grid' %}
{% set pageTitle = 'bts.issue.plural.label'|trans %}

{% block navButtons %}
    {% if resource_granted('bap_bts.issue_view') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('bap_bts.issue_index'),
                'entity_label': 'bts.issue.label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
