{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'issues-grid' %}
{% set pageTitle = 'bap.simplebts.issue.entity_plural_label'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        exportProcessor: 'bap_bts',
        exportTemplateProcessor: 'bap_bts'
    } %}

    {% if resource_granted('bap_bts.issue_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('bap_bts.issue_create'),
                'entity_label': 'bap.simplebts.issue.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
