{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value.id %}
    {% set formAction = path('bap_bts.issue_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('bap_bts.issue_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('bap_bts_api_delete_issue', {'id': form.vars.value.id}),
            'dataRedirect': path('bap_bts.issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'bts.issue.label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}

    {{ UI.cancelButton(path('bap_bts.issue_index')) }}

    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('bap_bts.issue_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}

    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('bap_bts.issue_index'),
            'indexLabel': 'bts.issue.plural.label'|trans,
            'entityTitle': form.vars.value.code
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'bts.issue.label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'issue-edit' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                form_row(form.code, {'label': 'bts.issue.code.label'}),
                form_row(form.summary, {'label': 'bts.issue.summary.label'}),
                form_row(form.description, {'label': 'bts.issue.description.label'}),
                form_row(form.type, {'label': 'bts.issue.type.label'}),
                form_row(form.priority, {'label': 'bts.priority.name.label'}),
                form_row(form.assignee, {'label': 'bts.issue.assignee.label'}),
            ]
        }]
    }] %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
